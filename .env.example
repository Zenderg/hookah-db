# Server Configuration
PORT=3000

# HTReviews Configuration
HTREVIEWS_BASE_URL=https://htreviews.org

# Cache Configuration
CACHE_TTL=86400

# API Keys (Add multiple keys for different clients)
# Format: API_KEY_<CLIENT_NAME>=<key>
API_KEY_TEST=test-api-key-12345

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Logging Configuration
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Directory for log files (relative to project root)
LOG_DIR=./logs

# Service name for log identification
SERVICE_NAME=hookah-db

# Environment: development, staging, production
NODE_ENV=development

# Scheduler Configuration
SCHEDULER_ENABLED=true

# Cron schedules (format: minute hour day month weekday)
# Brands refresh: 2:00 AM UTC daily
CRON_SCHEDULE_BRANDS=0 2 * * *

# Flavors refresh: 3:00 AM UTC daily
CRON_SCHEDULE_FLAVORS=0 3 * * *

# All data refresh: 4:00 AM UTC daily
CRON_SCHEDULE_ALL=0 4 * * *

# Maximum execution history entries
MAX_EXECUTION_HISTORY=100
