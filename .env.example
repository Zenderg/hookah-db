# ============================================
# Hookah Tobacco Database API - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# The .env file should NOT be committed to version control

# ============================================
# Database Configuration
# ============================================
# Database connection string (required)
# For development (SQLite): DATABASE_URL="file:./dev.db"
# For production (PostgreSQL): DATABASE_URL="postgresql://user:password@host:port/database"
DATABASE_URL=file:./dev.db

# ============================================
# API Configuration
# ============================================
# API server port (default: 3000)
API_PORT=3000

# API server host (default: 0.0.0.0)
API_HOST=0.0.0.0

# ============================================
# Parser Configuration
# ============================================
# Base URL for htreviews.org (default: https://htreviews.org)
PARSER_BASE_URL=https://htreviews.org

# Maximum concurrent requests for parser (default: 3)
PARSER_CONCURRENT_REQUESTS=3

# Delay between scroll requests in milliseconds (default: 1000)
PARSER_SCROLL_DELAY_MS=1000

# Maximum retry attempts for failed requests (default: 3)
PARSER_MAX_RETRIES=3

# Request timeout in milliseconds (default: 30000)
PARSER_TIMEOUT_MS=30000

# ============================================
# Logging Configuration
# ============================================
# Logging level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# Log format: json, pretty (default: json)
LOG_FORMAT=json

# ============================================
# Environment
# ============================================
# Environment mode: development, production, test (default: development)
NODE_ENV=development

# ============================================
# Rate Limiting
# ============================================
# Rate limiting window in milliseconds (default: 60000)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per rate limit window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100
