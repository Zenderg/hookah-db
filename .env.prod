# Production Environment Variables
# =================================

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# External Services
HTREVIEWS_BASE_URL=https://htreviews.org

# Cache Configuration
CACHE_TTL=86400
DATABASE_PATH=/app/hookah-db.db

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Scheduler Configuration
SCHEDULER_ENABLED=true
CRON_SCHEDULE_BRANDS="0 2 * * *"
CRON_SCHEDULE_FLAVORS="0 3 * * *"
CRON_SCHEDULE_ALL="0 4 * * *"

# API-Based Flavor Extraction Configuration
ENABLE_API_EXTRACTION=true
API_FLAVORS_PER_REQUEST=20
API_REQUEST_DELAY=500
API_MAX_RETRIES=3
ENABLE_API_FALLBACK=true

# API Keys (CHANGE THESE IN PRODUCTION)
API_KEY_CLIENT1=CHANGE_ME_IN_PRODUCTION
API_KEY_CLIENT2=CHANGE_ME_IN_PRODUCTION
