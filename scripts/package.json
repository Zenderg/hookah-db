{
  "name": "@hookah-db/scripts",
  "version": "1.0.0",
  "description": "Utility scripts including key management for hookah tobacco database",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hookah-generate-key": "./dist/generate-key.js",
    "hookah-validate-key": "./dist/validate-key.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "generate-key": "tsx src/generate-key.ts",
    "validate-key": "tsx src/validate-key.ts"
  },
  "dependencies": {
    "@hookah-db/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
