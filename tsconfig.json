{
  "compilerOptions": {
    /* Base Compiler Options */
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "types": ["node"],
    
    /* Path Aliases for Workspace Packages */
    "baseUrl": ".",
    "paths": {
      "@hookah-db/backend": ["./backend/src"],
      "@hookah-db/scraper": ["./scraper/src"],
      "@hookah-db/database": ["./database/src"],
      "@hookah-db/shared": ["./shared/src"],
      "@hookah-db/scripts": ["./scripts/src"]
    },
    
    /* Strict Mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    /* Module Resolution Options */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "skipLibCheck": true,
    "allowJs": false
  },
  "references": [
    { "path": "./backend" },
    { "path": "./scraper" },
    { "path": "./database" },
    { "path": "./shared" },
    { "path": "./scripts" }
  ]
}
