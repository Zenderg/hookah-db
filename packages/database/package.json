{
  "name": "@hookah-db/database",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate --config=src/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=src/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=src/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=src/drizzle.config.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/ui": "catalog:",
    "drizzle-kit": "^0.31.8",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@hookah-db/shared": "workspace:*",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3"
  }
}
