# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values
# DO NOT commit actual values to version control

# Database Configuration
DATABASE_URL=postgresql://your_production_db_user:your_secure_db_password@localhost:5432/hookah_db
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=5000

# API Configuration
API_PORT=3000
API_KEY=your_secure_api_key

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Scraper Configuration
SCRAPER_INTERVAL=3600
SCRAPER_TARGET_URL=https://htreviews.org

# Logging Configuration
LOG_LEVEL=info

# Node Environment
NODE_ENV=production

# Security Notes:
# - Use strong, unique passwords for database and API key
# - Rotate credentials regularly
# - Use environment-specific values for different deployments
# - Consider using secrets management solutions for production
