# Production Environment Variables Template
# Copy this file to .env.prod and fill in your actual values
# DO NOT commit actual values to version control

# Database Configuration
DB_USER=your_production_db_user
DB_PASSWORD=your_secure_db_password
DB_NAME=hookah_db
DB_PORT=5432

# API Configuration
API_PORT=3000
API_KEY=your_secure_api_key

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Scraper Configuration
SCRAPER_INTERVAL=3600
SCRAPER_TARGET_URL=https://htreviews.org

# Logging Configuration
LOG_LEVEL=info

# Node Environment
NODE_ENV=production

# Security Notes:
# - Use strong, unique passwords for database and API key
# - Rotate credentials regularly
# - Use environment-specific values for different deployments
# - Consider using secrets management solutions for production
